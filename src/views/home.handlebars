
<h1>Bienvenido a SportShop, {{user.email}} !!</h1>
<a href="/products">Ver todos los productos</a>
<a href="/carts">Carrito</a>
<form action="/api/sessions/logout" method="POST">
    <button type="submit">Logout</button>
</form>

<div>
    {{#each productos}}
        <div>
            <p>{{this.title}}</p>
            <p>{{this.description}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Precio: ${{this.price}}</p>
            <button>Agregar al carrito</button>
        </div>
    {{/each}}

    {{#if hasPrevPage}}
        <a href="/current?page={{prevPage}}">Anterior</a>
    {{/if}}

    {{#if hasNextPage}}
        <a href="/current?page={{nextPage}}">Siguiente</a>
    {{/if}}

    <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
</div>
